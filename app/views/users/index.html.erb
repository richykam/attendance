<h1>Listing users</h1>

<table class: 'table table-hover'>
  <thead>
    <tr>
      <th>Fname</th>
      <th>Lname</th>
      <th>Ic</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @users.each do |user| %>
      <tr>
        <td><%= user.fname %></td>
        <td><%= user.lname %></td>
        <td><%= user.ic %></td>
        <td><%= user.email %></td>
        <td><%= link_to 'Show', user, class: 'btn btn-mini' %></td>
<td><%= link_to 'Edit', edit_user_path(user) , class: 'btn btn-mini btn-success' %></td>
        <td><%= link_to 'Destroy', user,class: 'btn btn-mini btn-danger', method: :delete,  data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User', new_user_path %>
